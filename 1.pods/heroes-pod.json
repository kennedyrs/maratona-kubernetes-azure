{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "api-heroes-ff",
    "labels": {
      "version": "v1",
      "app": "api-heroes"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "api-heroes",
        "image": "kennedyrs/api-heroes:v1",
        "ports": [{
          "containerPort": 4000
        }],
        "env": [
          {
            "name": "MONGO_URL",
            "value": "10.244.0.8"
          },
          {
            "name": "PORT",
            "value": "4000"
          }
        ]
      }
    ]
  }
}
